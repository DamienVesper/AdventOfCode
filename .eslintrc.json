{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "standard"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "requireConfigFile": false
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "semi": [2, "always"],
        "quotes": [2, "backtick", "avoid-escape"],
        "no-use-before-define": 0,
        "no-unused-vars": 0,
        "prefer-arrow-callback": 2,
        "prefer-template": 2,
        "curly": 0,
        "no-void": 0,
        "no-eval": 0
    }
}
